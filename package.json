{
  "name": "alpaca-trading-scripts",
  "version": "2.0.0",
  "description": "Algotrading bot example using TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "prepare": "husky || true",
    "start": ".bin/run",
    "dev": "ts-node src/index.ts",
    "lint": "eslint --fix . && prettier --write .",
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "prewatch": "npm run build",
    "watch": "tsc -w",
    "cron": "node dist/crypto/cron.js",
    "crypto:backtest": "node dist/crypto/backtest.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/alpaca-trading-scripts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nielse63/alpaca-trading-scripts/issues"
  },
  "homepage": "https://github.com/nielse63/alpaca-trading-scripts#readme",
  "engines": {
    "node": ">=22.2.0"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.1.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "fs-extra": "^11.3.0",
    "lodash.findlastindex": "^4.6.0",
    "log-to-file": "^3.0.3",
    "moment": "^2.30.1",
    "node-cron": "^4.0.5",
    "pm2": "^6.0.5",
    "technicalindicators": "^3.1.0",
    "trading-signals": "3.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/lodash.findlastindex": "^4.6.9",
    "@types/moment-business": "^3.0.0",
    "@types/node": "^22.15.18",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-extended": "^3.0.0",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^16.0.0",
    "moment-business": "^3.0.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write",
    "*.{ts,js}": "eslint --fix"
  }
}
